rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isAuth() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuth() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        getUserData().role == 'admin';
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // RULES FOR COLLECTIONS
    match /users/{userId} {
      allow list: if isAdmin();
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isAuth(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /repairs/{repairId} {
      // Allow read/list if the user is the owner or an admin
      allow read, list: if isAuth() && (
        (resource != null && resource.data.userId == request.auth.uid) || 
        isAdmin()
      );
      
      // Authenticated users can create repairs.
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;

      // Owners and Admins can update/delete.
      allow update, delete: if isAuth() && (
        (resource != null && resource.data.userId == request.auth.uid) || 
        isAdmin()
      );
    }

    match /inventory/{itemId} {
        allow read, list: if isAuth();
        allow write, create, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      // Allow creation for any authenticated user
      allow create: if isAuth();
      
      // Allow reading/updating/deleting if you are the recipient
      allow read, list, update, delete: if isAuth() && (
        (resource != null && resource.data.userId == request.auth.uid) || 
        (resource != null && resource.data.userId == 'admin' && isAdmin())
      );
    }

    match /promotions/{promotionId} {
      allow read, list: if isAuth();
      allow write, create, delete: if isAdmin();
    }
  }
}